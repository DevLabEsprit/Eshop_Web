{% extends "::base.html.twig" %}
{% block body %}
<center>
    <div class="container">
    <div class="row">
        <div class="span12">
            <br>
            <br>
            <div id="collapseOne" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <div class="span4">
                        {% if utilisateur.adresses|length != 0 %}
                            <h2>Choisir Adresse Livraison</h2>
                            <form action="{{ path('validation') }}" method="POST">
                                <h4>Adresse de livraison</h4>
                                <br>
                                {% for adresse in utilisateur.adresses %}

                                        <input type="radio" name="livraison" value="{{ adresse.id }}" {% if loop.index0 == 0 %}checked="checked"{% endif %}>
                                         {{ adresse.adresse }}, {{ adresse.cp }} {{ adresse.ville }} - {{ adresse.pays }} {{ adresse.prenom }} {{ adresse.nom }} <a href="{{ path('livraisonAdresseSuppression', { 'id' : adresse.id }) }}">  <img src="{{ asset('images/ss.png') }}"></a>

                                          <br>


                                {% endfor %}
                                <br /><br />
                                <h4>Adresse de facturation</h4>
                                <br>
                                {% for adresse in utilisateur.adresses %}

                                        <input type="radio" name="facturation" value="{{ adresse.id }}" {% if loop.index0 == 0 %}checked="checked"{% endif %} />
                                        {{ adresse.adresse }}, {{ adresse.cp }} {{ adresse.ville }} - {{ adresse.pays }} {{ adresse.prenom }} {{ adresse.nom }} <a href="{{ path('livraisonAdresseSuppression', { 'id' : adresse.id }) }}"><img src="{{ asset('images/ss.png') }}"></a>
                                        <br>

                                {% endfor %}

                                <br>

                                <button class="btn btn-primary">Valider mes adresses</button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <br>
    <br>
    <br>
    </center>
    <div class="login-page">
        <div class="container">
            <h3 class="w3ls-title w3ls-title1">Ajouter une nouvelle adresse</h3>
            <div class="login-body">
                <form action="{{ path('Livraison') }}" method="POST">
                    {{ form_widget(form) }}
                    <button class="btn btn-primary" type="submit">Ajouter Une Adresse</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}